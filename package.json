{
  "name": "mcp-squared",
  "version": "0.1.0",
  "description": "MCPÂ² (Mercury Control Plane) - A local-first meta-server and proxy for the Model Context Protocol",
  "author": "aditzel",
  "license": "Apache-2.0",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "bin": {
    "mcp-squared": "bin/mcp-squared"
  },
  "files": ["bin", "dist"],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun --packages=external",
    "build:compile": "bun build src/index.ts --compile --outfile dist/mcp-squared",
    "build:compile:matrix": "bash scripts/compile-matrix.sh",
    "prepack": "bun run build",
    "test": "bun test",
    "test:fast": "SKIP_SLOW_TESTS=true bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "safety:sim": "bun run agent_safety_kit/cost_model/simulate.ts --tasks agent_safety_kit/cost_model/tasks.csv --pricing agent_safety_kit/cost_model/pricing.csv --out agent_safety_kit/cost_model/report.md"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.3.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "tools",
    "proxy",
    "meta-server"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aditzel/mcp-squared"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@opentui/core": "^0.1.77",
    "yaml": "^2.8.1",
    "smol-toml": "^1.6.0",
    "zod": "^4.3.6"
  },
  "optionalDependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-trace-base": "^1.30.1"
  }
}
